@model IEnumerable<UI.WebFinal.Models.PlanesModel>

@{
    ViewBag.Title = "Planes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<h2>Planes</h2>

<p>
    @Html.ActionLink("Agregar plan", "Agregar")  || 
    @Html.ActionLink("Exportar a PDF", "ExportarPDF")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_plan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_plan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_especialidad)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_plan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_plan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_especialidad)
        </td>
       
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id=item.id_plan  }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.id_plan }, new { @class ="pElimina"})
        </td>
    </tr>
}

</table>
@section scripts
{
    <script>
        $(".pElimina").click(function (event) {
            if (!confirm('Estas seguro que desea eliminar?')) {
                event.preventDefault();
            }
        });
    </script>

}