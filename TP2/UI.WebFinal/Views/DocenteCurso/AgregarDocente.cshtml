<h2>Agregar dictado</h2>
<h3>@Session["error"]</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_dictado)
        @Html.HiddenFor(model => model.id_curso)




        <div class="form-group">
            <div class="form-group">
                @Html.LabelFor(model => model.ApellidoNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.id_docente, new SelectList(ViewBag.Docentes, "id_usuario", "ApellidoNombre"), new { @class = "form-control" })
                </div>
            </div>

                <!--<div class="form-group">
                    @Html.LabelFor(model => model.cargo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.cargo, new SelectList(ViewBag.Cargos), "Selecionar Cargo", new { @class = "form-control" })
                    </div>
                </div>-->
                <div class="form-group">
                    <label class="control-label col-md-2">Condición</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.cargo, new SelectList(ViewBag.Cargos, "Value", "Text"), new { @class = "form-control" })

                    </div>
                </div>
            </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-default" />
        </div>
    </div>
}



