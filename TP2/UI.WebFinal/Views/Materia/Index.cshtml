@model IEnumerable<UI.WebFinal.Models.MateriaModel>

@{
    ViewBag.Title = "Materias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<h2>Materias</h2>

<p>
    @Html.ActionLink("Agregar materia", "Agregar") ||
    @Html.ActionLink("Exportar a PDF", "ExportarPDF")

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_materia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_materia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hs_totales)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hs_semanales)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_plan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.desc_especialidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_materia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_materia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hs_totales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hs_semanales)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_plan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.desc_especialidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  id=item.id_materia  }) |
            @Html.ActionLink("Borrar", "Eliminar", new { id=item.id_materia }, new { @class = "pElimina"})
        </td>
    </tr>
}

</table>
@section scripts
{
    <script>
        $(".pElimina").click(function (event) {
            if (!confirm('Estas seguro que desea eliminar?')) {
                event.preventDefault();
            }
        });
    </script>

}